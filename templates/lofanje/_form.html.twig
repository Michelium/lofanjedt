{{ form_start(form, {'attr': {'class': 'form-inline', 'autocomplete': 'off'}}) }}
<div class="row">
    <div class="col-12 col-md-6">
        {{ form_row(form.category) }}
    </div>
</div>
<hr>
<div class="form-wrap">
    <div class="popover-buttons d-none">
        {% include 'lofanje/_popover_chars.html.twig'|raw %}
    </div>
    {% for key, field in form.children|slice(1)|slice(0, -1) %}
        <div class="row">
            <div class="col-sm-2 col-form-label">
                {{ form_label(attribute(form, key)) }}
            </div>
            <div class="col-sm-10">
                {{ form_widget(attribute(form, key)) }}
            </div>
        </div>
    {% endfor %}
</div>
<div class="row">
    <div class="col-12">
        <button type="submit" class="btn btn-primary float-end">save changes</button>
    </div>
</div>
{{ form_end(form) }}
